@model TraversalCoreProject.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v5 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/css/roboto-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" method="post">
				<h2>Traversal Misafir Kayıt Sayfası</h2>
				<div class="form-row">
					<label for="full-name">Adınız</label>
					<input type="text" class="input-text"  asp-for="Name">
					<i class="fas fa-user"></i>
					<span asp-validation-for="Name" style="color:red"></span>
				</div>
				<br />
				<div class="form-row">
					<label for="full-name">Soyadınız</label>
					<input type="text"  class="input-text"   asp-for="Surname">
					<span asp-validation-for="Surname" style="color:red"></span>
					<i class="fas fa-user"></i>	
				</div>
				<br />
				<div class="form-row">
					<label for="full-name">Kullanıcı Adınız</label>
					<input type="text" class="input-text"   asp-for="UserName">
					<i class="fas fa-user-circle"></i>
					<span asp-validation-for="UserName" style="color:red"></span>
				</div>
				<br />
				<div class="form-row">
					<label for="full-name">Mail Adresiniz</label>
					<input type="email" class="input-text"  asp-for="Mail">
					<i class="fas fa-bookmark"></i>
					<span asp-validation-for="Mail" style="color:red"></span>
				</div>
				<br />
				<div class="form-row">
					<label for="password">Şifreniz</label>
					<input type="password" asp-for="Password" class="input-text" >
					<i class="fas fa-lock"></i>
					<span asp-validation-for="Password" style="color:red"></span>
				</div>
				<br />
				<div class="form-row">
					<label for="password">Şifre Tekrar</label>
					<input type="password" asp-for="ConfirmPassword" class="input-text" >
					<i class="fas fa-lock"></i>
					<span asp-validation-for="ConfirmPassword" style="color:red"></span>
				</div>
				<div class=" text-danger" asp-validation-summary="ModelOnly">

				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
				<div class="text-center p-t-136">
					<a class="txt2" href="/Login/SignIn/">
						Zaten Bir Hesabınız Var Mı? Giriş Yap.
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
		</div>
	</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>